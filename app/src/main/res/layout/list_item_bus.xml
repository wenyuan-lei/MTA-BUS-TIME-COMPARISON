<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="@color/colorTransparent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/item_bus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_directions_bus_black_48dp"/>

            <TextView
                android:id="@+id/item_read_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="35dp"
                android:visibility="visible"
                android:layout_toRightOf="@+id/item_bus_image"
                android:layout_alignParentTop="true"
                android:text="good night"/>

            <TextView
                android:id="@+id/item_read_stop_code_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_bus_image"

                android:visibility="invisible"/>

            <TextView
                android:id="@+id/item_read_stop_code_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/item_bus_image"/>
             <TextView
                android:id="@+id/item_read_stop_code_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/item_bus_image"/>

            <TextView
                android:id="@+id/item_row_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/item_bus_image"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>